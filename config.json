{
    "name": "parallel-minidataset-lr-plateau",
    "n_gpu": 1,

    "arch": {
        "type": "HomographyRegressor",
        "args": {}
    },
    "data_loader": {
        "type": "HomographyDataLoader",
        "args":{
            "data_dir": "data/mini_dataset_correction/",
            "batch_size": 50,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 2
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "weighted_mse_loss",
    "metrics": [
        "rmse"
    ],
    "lr_scheduler": {
        "type": "ReduceLROnPlateau",
        "args": {
            "mode": "min",
            "patience": 6,
            "min_lr": 0.000001
        }
    },
    "trainer": {
        "epochs": 40,

        "save_dir": "saved/",
        "save_period": 5,
        "verbosity": 2,

        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": false
    }
}